<!DOCTYPE html>
<html>
    <head>
        <title>This is the Todo list</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    </head>
    <body>
        <div class="container">
            {{>header}}

            {{>addTodo}}

            {{#each data}}  
                <div class="alert {{#if this.complete }} alert-success  {{else}} alert-info {{/if}}" role="alert">
                    {{#if this.complete }}

                    <del>{{this.todo}}</del>
                    {{else}}
                    {{this.todo}}
                    {{/if}}


                    <div class="float-right row">
                        {{#if this.complete }}
                        {{else}}
                        <form name="updateTodos" action="update_todo/{{this.todo_id}}" method="POST" class="col-sm-6">
                            <button type="submit" class="btn btn-primary">Done</button>
                        </form>
                        {{/if}}
                        <form name="deleteTodos" action="delete_todo/{{this.todo_id}}" method="POST" class="col-sm-6">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <div class="clearfix"></div>
                </div>
            {{/each}}
            

            {{>footer}}
        </div>

    </body>
</html>
